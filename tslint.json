{
	"rules": {
		"prefer-const": true,
		"arrow-parens": false,
		"quotemark": [
			true,
			"double"
		],
		"semicolon": [
			true
		],
		"no-shadowed-variable": true,
		"indent": [
			true,
			"tabs"
		],
		"no-trailing-whitespace": true,
		"no-var-keyword": true,
		"prefer-for-of": true,
		"object-literal-shorthand": true,
		"whitespace": [
			true,
			"check-branch",
			"check-decl",
			"check-operator",
			"check-module",
			"check-separator",
			"check-type"
		],
		"array-type": [
			true,
			"array"
		],
		"trailing-comma": [
			true,
			{
				"multiline": "always", 
				"singleline": "never"
			}
		]
	}
}